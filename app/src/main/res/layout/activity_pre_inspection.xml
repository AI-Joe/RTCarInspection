<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train_night"
    tools:context="com.lieb.j.traininspection.PreInspection">

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        android:onClick="onClickQuit"
        android:text="Quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="215dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="8dp"
        android:text="Finish"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btnQuit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        android:onClick="onClickNext"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnFinish"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="676dp"
        android:layout_height="421dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblSpecs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Details Form"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:typeface="serif" />

        <AutoCompleteTextView
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.07"
            android:autoText="false"
            android:background="@android:color/white"
            android:elevation="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:text="Enter Location"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <AutoCompleteTextView
            android:id="@+id/txtCompany"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.06"
            android:autoText="false"
            android:background="@android:color/white"
            android:elevation="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:text="Enter Company"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <AutoCompleteTextView
            android:id="@+id/txtTrain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.04"
            android:autoText="false"
            android:background="@android:color/white"
            android:elevation="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:text="Enter Train ID"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtErrorbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.54"
            android:text="Please enter all fields before hitting 'Next'"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@android:color/black"
            android:textSize="40dp"
            android:visibility="invisible" />

    </LinearLayout>

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="606dp"
        android:layout_height="192dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="559dp"
        android:elevation="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

</android.support.constraint.ConstraintLayout>
